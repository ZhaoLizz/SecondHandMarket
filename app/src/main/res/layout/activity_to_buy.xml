<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.market.secondhandmarket.ToBuyActivity">

    <ProgressBar
        android:id="@+id/buy_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tobuy_name"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="想买的宝贝"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"
            app:met_floatingLabelText="宝贝名称"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tobuy_price"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/cardView3"
            android:layout_alignTop="@+id/cardView"
            android:gravity="center"
            android:hint="预期价格"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardView2"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="10dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tobuy_phone"
            android:layout_width="213dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="电话号码"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardView3"
        android:layout_below="@+id/cardView3"
        android:layout_marginTop="10dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tobuy_content"
            android:layout_width="213dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="物品描述"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAnimating="true"/>

    </android.support.v7.widget.CardView>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tobuy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="15dp"
        android:text="发布"
        android:textSize="15sp"/>


</LinearLayout>
